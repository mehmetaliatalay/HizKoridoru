<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="5dp"
    tools:context=".DriveActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:padding="2dp"
        android:layout_height="match_parent">


        <com.github.anastr.speedviewlib.SpeedView
            android:id="@+id/speedView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintBottom_toTopOf="@+id/txt_Kalan_Sure"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.6"
            app:sv_trembleDegree="1"
            app:sv_trembleDuration="1000"
            app:sv_indicatorColor="@color/colorPrimary" />


        <TextView
            android:id="@+id/txt_Kalan_Sure"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_below="@+id/speedView"
            android:layout_marginStart="16dp"
            android:layout_marginTop="@dimen/magin_top"
            android:layout_marginEnd="16dp"
            android:text="@string/kalan_sure"
            android:textColor="@color/textColor"
            android:textSize="@dimen/text_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.04"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/speedView" />

        <TextView
            android:id="@+id/txt_Yolculuk_Bilgileri"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="@dimen/magin_top"
            android:layout_marginEnd="16dp"
            android:text="@string/surus_detay"
            android:textColor="@color/textColor"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.04"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_Kalan_Sure" />

        <TextView
            android:id="@+id/txt_Arac_Tipi"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_below="@+id/txt_Yolculuk_Bilgileri"
            android:layout_marginStart="16dp"
            android:layout_marginTop="@dimen/magin_top"
            android:layout_marginEnd="16dp"
            android:text="@string/arac_tipi"
            android:textColor="@color/textColor"
            android:textSize="@dimen/text_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.04"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_Yolculuk_Bilgileri" />

        <TextView
            android:id="@+id/txt_Arac_Hiz_Limiti"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_below="@+id/txt_Arac_Tipi"
            android:layout_marginStart="16dp"
            android:layout_marginTop="@dimen/magin_top"
            android:layout_marginEnd="16dp"
            android:text="@string/arac_hiz_limiti"
            android:textColor="@color/textColor"
            android:textSize="@dimen/text_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.04"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_Arac_Tipi" />

        <TextView
            android:id="@+id/txt_Seyahat_Otoyol"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_below="@+id/txt_Arac_Hiz_Limiti"
            android:layout_marginStart="16dp"
            android:layout_marginTop="@dimen/magin_top"
            android:layout_marginEnd="16dp"
            android:text="@string/otoyol"
            android:textColor="@color/textColor"
            android:textSize="@dimen/text_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.04"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_Arac_Hiz_Limiti" />

        <TextView
            android:id="@+id/txt_Giris_Gise"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_below="@+id/txt_Seyahat_Otoyol"
            android:layout_marginStart="16dp"
            android:layout_marginTop="@dimen/magin_top"
            android:layout_marginEnd="16dp"
            android:text="@string/giris_gise"
            android:textColor="@color/textColor"
            android:textSize="@dimen/text_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.04"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_Seyahat_Otoyol" />

        <TextView
            android:id="@+id/txt_Cikis_Gise"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_below="@+id/txt_Giris_Gise"
            android:layout_marginStart="16dp"
            android:layout_marginTop="@dimen/magin_top"
            android:layout_marginEnd="16dp"
            android:text="@string/cikis_gise"
            android:textColor="@color/textColor"
            android:textSize="@dimen/text_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.04"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_Giris_Gise" />

        <TextView
            android:id="@+id/txt_Mesafe"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_below="@+id/txt_Cikis_Gise"
            android:layout_marginStart="16dp"
            android:layout_marginTop="@dimen/magin_top"
            android:layout_marginEnd="16dp"
            android:text="@string/mesafe"
            android:textColor="@color/textColor"
            android:textSize="@dimen/text_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.04"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_Cikis_Gise" />


        <TextView
            android:id="@+id/txt_Fiyat"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_below="@+id/txt_Mesafe"
            android:layout_marginStart="16dp"
            android:layout_marginTop="@dimen/magin_top"
            android:layout_marginEnd="16dp"
            android:text="@string/fiyat"
            android:textColor="@color/textColor"
            android:textSize="@dimen/text_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.04"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_Mesafe" />


        <Button
            android:id="@+id/btn_Baslat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/button_Side_Margin"
            android:layout_marginEnd="@dimen/button_Side_Margin"
            android:layout_marginBottom="@dimen/button_Bottom_Margin"
            android:background="@drawable/button_background"
            android:text="@string/baslat"
            android:textColor="@color/buttonTextColor"
            android:textSize="@dimen/text_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent" />


    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>


